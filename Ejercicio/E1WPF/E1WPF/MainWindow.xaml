<Window x:Class="E1WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E1WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Content="Nombre" Margin="20"/>
        <TextBox Grid.Row="0" x:Name="NombreTXT" Margin="50" />

        <Label Grid.Row="1" Content="Precio" Margin="20"/>
        <TextBox Grid.Row="1" x:Name="TXTPrecio" Margin="50" />

        <Button Grid.Row="2" Content="OK" Click="Button_Click" Margin="5"/>
    </Grid>
</Window>
