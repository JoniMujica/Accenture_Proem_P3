@model IEnumerable<Trago>
    
    <a asp-action="Editar" asp-route-id="0">Crear</a>
    <a asp-action="Editar2" asp-route-id="0">Crear2</a>
<table>
    <tr>
        <td>Id</td>
        <td>Nombre</td>
    </tr>
        
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            <td><a asp-action="Editar2" asp-route-id="@item.Id">Editar</a></td>
        </tr>
    }
</table>