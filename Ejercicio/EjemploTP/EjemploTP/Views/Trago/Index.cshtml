@model IEnumerable<Trago>

    <a asp-action="Editar" asp-route-id="0"></a>
<table>
    <tr>
        <td>Id</td>
        <td>Nombre</td>
        <td></td>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            <td><a asp-action="Editar" asp-route-id="@item.Id">Editar</a></td>
        </tr>
    }
</table>